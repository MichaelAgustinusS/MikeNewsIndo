extends ../layout/base
block content
    section.content-header
        h1
            | Add Berita
            small Halaman Add Data Berita
        ol.breadcrumb
            li
                a(href='#')
                    i.fa.fa-dashboard
                    | Level
            li.active Here
    section.content
        .box
            .box-header.with-border
                h3.box-title
                    | Customer
                .box-tools.pull-right
                    button(type='button', data-widget='collapse', data-toggle='tooltip',title='collapse').btn.btn-box-tool
                        i.fa.fa-minus
            .box-body
                form(role='form',method='post' action='/customers/add')
                    .row

                        .col-xs-6
                            .box-body
                                - if (messages.msg_error)
                                    .alert.alert-danger.alert-dismissable
                                        button.close(type='button', data-dismiss='alert', aria-hidden='true')
                                            | Ã—
                                        h4
                                            i.icon.fa.fa-ban
                                            | Alert!
                                        | !{messages.msg_error}
                                .form-group
                                    label
                                        | Judul
                                    input(type='text',value='#{name}',name='name',placeholder='Enter', autofocus).form-control
                                .form-group
                                    label
                                        | Isi
                                    input(type='text',name='address',placeholder='Enter').form-control
                                .form-group
                                    label
                                        | Author
                                    input(type='text',value='#{email}',name='email',placeholder='Enter').form-control
                                .form-group
                                    label
                                        | Tanggal
                                    input(type='text',name='phone',placeholder='Enter').form-control
                            .box-footer
                                button(type='submit').btn.btn-primary.pull-right
                                    | Submit
                                a(href='/customers').btn.btn-primary.pull-left
                                    | Back