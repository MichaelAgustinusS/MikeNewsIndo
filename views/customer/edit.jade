extends ../layout/base
block content
    section.content-header
        h1
            | Edit Berita
            small Halaman Edit Data
        ol.breadcrumb
            li
                a(href='#')
                    i.fa.fa-dashboard
                    | Level
            li.active Here
    section.content
        .box
            .box-header.with-border
                h3.box-title
                    | Customer
                .box-tools.pull-right
                    button(type='button', data-widget='collapse', data-toggle='tooltip',title='collapse').btn.btn-box-tool
                        i.fa.fa-minus
            .box-body
                form(role='form',method='post' action='/customers/edit/#{(id==undefined) ? data.id : id}')
                    .row

                        .col-xs-6
                            .box-body
                                - if (messages.msg_error)
                                    .alert.alert-danger.alert-dismissable
                                        button.close(type='button', data-dismiss='alert', aria-hidden='true')
                                            | ×
                                        h4
                                            i.icon.fa.fa-ban
                                            | Alert!
                                        | !{messages.msg_error}
                                - if (messages.msg_info)
                                    .alert.alert-success.alert-dismissable
                                        button.close(type='button', data-dismiss='alert', aria-hidden='true')
                                            | ×
                                        h4
                                            i.icon.fa.fa-ban
                                            | Success!
                                        | !{messages.msg_info}
                                .form-group
                                    label
                                        | Judul
                                    input(type='text',value="#{data.name}",name='name',placeholder='Enter', autofocus).form-control
                                .form-group
                                    label
                                        | Isi
                                    input(type='text',value="#{ (address == undefined) ? data.address : address }",name='address',placeholder='Enter').form-control
                                .form-group
                                    label
                                        | Author
                                    input(type='text',value="#{ (email ==undefined) ? data.email : email }",name='email',placeholder='Enter').form-control
                                .form-group
                                    label
                                        | Tanggal
                                    input(type='text',value="#{ (phone ==undefined) ? data.phone : phone }",name='phone',placeholder='Enter').form-control
                            .box-footer
                                input(type="hidden",name="_method", value="PUT")
                                button(type='submit').btn.btn-primary.pull-right
                                    i.fa.fa-pencil
                                    | Edit
                                a(href='/customers').btn.btn-primary.pull-left
                                    | Back